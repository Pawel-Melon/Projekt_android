<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AccountFragment">

    <TextView
        android:id="@+id/surnameTextView"
        android:layout_width="281dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:text="Nazwisko: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156" />

    <TextView
        android:id="@+id/accountStatusTextView"
        android:layout_width="196dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:text="Stan konta: "
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="370dp"
        android:layout_height="25dp"
        android:layout_margin="16dp"
        android:text="Email: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="281dp"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        android:text="Imię: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="365dp"
        android:layout_height="450dp"
        android:background="@drawable/gradient"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rentalsTextView">

        <LinearLayout
            android:id="@+id/rentalsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/white"
            android:textColor="@color/white"
            android:theme="@style/Base.Theme.Projekt">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/rentalsTextView"
        android:layout_width="356dp"
        android:layout_height="24dp"
        android:layout_marginTop="21dp"
        android:text="Wypożyczone książki: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountStatusTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>