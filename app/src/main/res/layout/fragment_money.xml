<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneyFragment">

    <TextView
        android:id="@+id/topUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doładuj konto"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topUpEditText" />

    <EditText
        android:id="@+id/topUpEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Wprowadź kwotę"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/topUpTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topUpButton" />

    <Button
        android:id="@+id/topUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doładuj"
        app:layout_constraintTop_toBottomOf="@id/topUpEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>